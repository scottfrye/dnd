{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "location.schema.json",
  "title": "Location",
  "description": "Schema for AD&D 1E location/room data",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the location"
    },
    "name": {
      "type": "string",
      "description": "The name of the location"
    },
    "description": {
      "type": "string",
      "description": "Text description of the location"
    },
    "dimensions": {
      "type": "object",
      "description": "Physical dimensions of the location",
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "exits": {
      "type": "array",
      "description": "Available exits from this location",
      "items": {
        "type": "object",
        "required": ["direction", "target"],
        "properties": {
          "direction": {
            "type": "string",
            "enum": ["north", "south", "east", "west", "up", "down"]
          },
          "target": {
            "type": "string",
            "description": "ID of the target location"
          },
          "locked": {
            "type": "boolean",
            "default": false
          },
          "key_id": {
            "type": "string",
            "description": "ID of the key that unlocks this exit"
          }
        }
      }
    },
    "monsters": {
      "type": "array",
      "description": "Monsters present in this location",
      "items": {
        "type": "string"
      }
    },
    "items": {
      "type": "array",
      "description": "Items present in this location",
      "items": {
        "type": "string"
      }
    },
    "light_level": {
      "type": "string",
      "description": "Light conditions",
      "enum": ["bright", "dim", "dark"]
    }
  }
}
